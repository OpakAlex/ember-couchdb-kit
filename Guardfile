# A sample Guardfile
# More info at https://github.com/guard/guard#readme

guard 'coffeescript', input: 'assets/javascripts', output: 'public/javascripts' do
  watch(%r{assets/javascripts/(.+\.coffee)})
end

guard 'coffeescript', input: 'spec/javascripts', output: 'spec/javascripts' do
  watch(%r{spec/javascripts/(.+\.coffee)})
end